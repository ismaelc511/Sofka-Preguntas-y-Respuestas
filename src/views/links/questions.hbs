<div class="container p-4">
    <div class="row">
        {{#each questions}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <p class="card-title text-uppercase text-dark">
                            {{round}}
                        </p>
                        <p class="card-title text-uppercase text-dark">
                            {{category}}
                        </p>
                        <div "card-body">
                        <img src="{{image}}" alt="image" width="200px" height="200px"/>
                        </div>
                        <p class="card-title text-uppercase text-dark">
                            {{question}}
                        </p>
                        <div>
                        <button type="button" class="btn btn-primary px-5 my-2">
                            {{answer}}
                        </button>
                        </div>
                        <div>
                        <button type="button" class="btn btn-primary px-5 my-2">
                            {{incorrect1}}
                        </button>
                        </div>
                        <div>
                        <button type="button" class="btn btn-primary px-5 my-2">
                            {{incorrect2}}
                        </button>
                        </div>
                        <div>
                        <button type="button" class="btn btn-primary px-5 my-2 ">
                            {{incorrect3}}
                        </button>
                        </div>
                        
                        <a href='/links/Showquestions' class='btn btn-secondary mx-12 my-2 px-5'>Next</a>
                        
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>